<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/review_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/progress_view"
        style="@style/progress_view"
        android:layout_margin="3dp"
         />
    
    <ListView
        android:id="@+id/review_wordlist"
        android:layout_width="fill_parent"
        android:layout_height="187dp"
        android:layout_weight="0.5"
        android:background="#FFF"
        android:divider="#CCC"
        style="@style/AnneListView"
        android:dividerHeight="0dp" >
    </ListView>

    <LinearLayout
        android:id="@+id/rev_btn"
        android:layout_width="fill_parent"
        android:layout_height="75dp">

        <Button
            android:id="@+id/rev_button_prev"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@drawable/btn_blue"
            style="@style/button_text_blue"
            android:layout_margin="5dp"
            android:text="« 上一页" />

        <Button
            android:id="@+id/rev_button_next"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@drawable/btn_blue"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            style="@style/button_text_blue"
            android:text="下一页 »" />
    </LinearLayout>

</LinearLayout>